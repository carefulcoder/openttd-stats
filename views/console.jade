extends layout

block content
    .page-header: h1 Server Consoles
    script(src='/socket.io/socket.io.js')
    script(src='#{settings.uri}js/console.js')

    ul.nav.nav-tabs#tabs
        each name, id in servers
            li: a(href='#console#{id}', data-toggle="tab") #{name}

    div.tab-content
        each name, id in servers
            pre(id="console#{id}").console.tab-pane
    a.btn(href="#{settings.uri}trains/servers") Back to Server List